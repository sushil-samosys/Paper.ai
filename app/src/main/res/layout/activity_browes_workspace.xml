<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlHomeSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e5e5e5"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/projectback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:src="@mipmap/signin_back_icon" />

        <TextView
            android:id="@+id/txt_project_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLength="15"
            android:maxLines="1"

            android:singleLine="true"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/txtsave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"

                android:textColor="@color/basecolor"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>


    </RelativeLayout>

    <EditText
        android:id="@+id/edtSerchspace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/light_border"
        android:focusableInTouchMode="true"
        android:hint="Search by workspace url..."
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="@dimen/_5sdp"

        android:textColor="@color/txt_dark"
        android:textColorHint="@color/txt_light" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvworkspace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
