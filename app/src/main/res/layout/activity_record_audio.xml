<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.samosys.paperai.activity.activity.RecordAudioActivity">

    <!--<com.samosys.paperai.activity.utils.SquaredFrameLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content">-->

    <ImageView
        android:id="@+id/imgCapturedimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/rlTopbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@mipmap/sign_up_topbar_img"
        android:orientation="vertical"


        android:visibility="visible">


        <ImageView
            android:id="@+id/imgback_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
android:padding="@dimen/_5sdp"
            android:src="@mipmap/signin_back_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txtheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text=""

            android:textColor="#fff"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_next_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="NEXT"
            android:textColor="#fff"
            android:textSize="@dimen/_12sdp" />
    </RelativeLayout>

    <!--</com.samosys.paperai.activity.utils.SquaredFrameLayout>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center">

        <com.samosys.paperai.activity.utils.CircularProgressBar
            android:id="@+id/circularProgressbar"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cpb_background_progressbar_color="#fff"
            app:cpb_background_progressbar_width="8dp"

            app:cpb_progressbar_color="@color/colorAccent"
            app:cpb_progressbar_width="8dp" />

        <ImageView
            android:id="@+id/img_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/home_mike" />
    </RelativeLayout>
</RelativeLayout>
