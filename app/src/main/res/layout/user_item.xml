<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_mike_menu" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_folle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/home_paper" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_image_folle"
            android:orientation="vertical">


            <TextView
                android:id="@+id/userName_folloe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="@dimen/_15sdp"

                android:text="dvgcvcxv"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/userName_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toRightOf="@+id/user_image_folle"
                android:text="dvgcvcxv"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/login"
            android:paddingBottom="@dimen/_4sdp"
            android:paddingLeft="@dimen/_8sdp"
            android:paddingRight="@dimen/_8sdp"
            android:textColor="@color/txt_dark"
            android:paddingTop="@dimen/_4sdp"
            android:text="unfollow"
            android:textSize="@dimen/_9sdp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light" />
</LinearLayout>