<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_8sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a summary of tour action:"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_alignParentTop="true"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/caption_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_mainsend"
        android:layout_below="@+id/txt_text"

        android:gravity="top|left"
        android:inputType="textMultiLine"

android:maxLines="10"
        android:scrollbars="vertical"

        />

    <LinearLayout
        android:id="@+id/ll_mainsend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
         android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/workname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:layout_weight="0.7"
            android:background="@drawable/light_border"
            android:padding="@dimen/_10sdp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_weight="0.3"
            android:background="@drawable/light_border"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="SEND"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />


    </LinearLayout>

</RelativeLayout>